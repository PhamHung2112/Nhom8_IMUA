                        các sản phẩm khác
                        <i class="fas fa-plus"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="widget__content">
            <div class="widget__category">
                <div class="title">
                    <span><i class="fas fa-th"></i></span>
                    <h4>Tin nổi bật</h4>
                </div>
                <div class="wrapper">
                    <div class="news__box">
                        <ul class="news__menu">
                            @foreach (var item in Model)
                            {
                                <li class="news__item">
                                    <img src="~/assets/Images/TinTuc/@item.AnhTinTuc" alt="">

@model Nhom8_IMUA.Models.TinTuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h3 class="elements-header">Chi tiết tin tức</h3>
        <br />
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <td>
                        <label class="elements-title">Mã tin tức :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.MaTinTuc)
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="elements-title">Tiêu đề :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.TieuDe)
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="elements-title">Tóm tắt :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Raw(HttpUtility.HtmlDecode(Model.TomTat))
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="elements-title">Nội dung :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Raw(HttpUtility.HtmlDecode(Model.NoiDung))
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="elements-title">Ảnh tin tức :</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        @{
                            string AnhTTPath = "~/assets/Images/TinTuc/" + Model.AnhTinTuc;
                        }
                        <img src="@Url.Content(AnhTTPath)" />
                    </td>
                </tr>
            </table>

        </div>
        <button class="btn btn-inverse-dark btn-fw" onclick="location.href='@Url.Action("Index", "TinTucs")';return false;">Quay lại</button>
    </div>
</div>
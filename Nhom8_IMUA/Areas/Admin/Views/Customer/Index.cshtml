@model PagedList.IPagedList<Nhom8_IMUA.Models.NguoiDung>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-header">
                    <h4 class="card-title">Danh sách tài khoản</h4>
                    <a class="btn btn-primary">
                        <i class="ti-plus"></i>
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Loại tài khoản</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.HoTen</td>
                                    <td>@item.SoDT</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.Email</td>
                                    <td>@Html.CheckBoxFor(model => item.Loai)</td>
                                    <td>@Html.CheckBoxFor(model => item.TrangThai)</td>
                                    <td>
                                        <div>
                                            <a class="btn btn-primary">
                                                <i class="ti-eye"></i>
                                            </a> &nbsp;
                                            <a class="btn btn-primary">
                                                <i class="ti-pencil-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="phan-trang">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
            </div>
        </div>
    </div>